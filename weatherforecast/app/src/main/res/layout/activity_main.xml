<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/etCityInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/city_input_text_auto_fill"
        android:inputType="text"
        android:importantForAutofill="no" />

    <Button
        android:id="@+id/btnGetWeather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_get_weather"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:backgroundTint="@color/btn_color_tint" />

    <TextView
        android:id="@+id/tvResultState"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvWeatherData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>